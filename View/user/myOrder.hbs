            const response = await fetch(`/order/cancel/${orderId}/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
            });

            if (response.ok) {
                document.querySelector(`.status[data-product-id="${productId}"]`).textContent = 'Cancelled';
            } else {
                alert('Failed to cancel the product');
            }
        } catch (error) {
            console.error('Error:', error);
        }
    }
</script>


