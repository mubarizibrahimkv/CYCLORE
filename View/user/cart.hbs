    <!--==================order total=========-->
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const calculateOrderTotal = () => {
                const totalElements = document.querySelectorAll("[id^='price-']");
                let orderTotal = 0;

                totalElements.forEach((element) => {
                    const price = parseFloat(element.textContent.replace("â‚¹", ""));
                    orderTotal += price;
                });

                const orderTotalElement = document.getElementById("order-total");
                if (orderTotalElement) {
                    orderTotalElement.textContent = `â‚¹${orderTotal.toFixed(2)}`;
                }
            };

            const quantityInputs = document.querySelectorAll(".quantity-input");
            quantityInputs.forEach((input) => {
                input.addEventListener("input", (event) => {
                    const quantity = parseInt(event.target.value) || 0;
                    const priceElement = event.target.closest("tr").querySelector(".price");
                    const totalElement = event.target.closest("tr").querySelector("[id^='price-']");

                    if (priceElement && totalElement) {
                        const price = parseFloat(priceElement.textContent.replace("â‚¹", ""));
                        const productTotal = price * quantity;

                        totalElement.textContent = `â‚¹${productTotal.toFixed(2)}`;

                        calculateOrderTotal();
                    }
                });
            });

            calculateOrderTotal();
        });

    </script>


    <!---update Quantity---->
    <script>
        function updateQuantity(action, productId) {
            const input = document.querySelector(`input[data-product-id='${productId}']`);
            const priceElement = document.querySelector(`#price-${productId}`);
            const orderTotalElement = document.getElementById('order-total');
            const maxStock = parseInt(input.getAttribute('data-stock'));
            const productName = input.getAttribute('data-product-name');
            let currentQty = parseInt(input.value);

            if (isNaN(currentQty) || currentQty < 1) {
                swal.fire({
                    title: "Invalid Quantity",
                    text: "Quantity cannot be less than 1.",
                    icon: "warning",
                    button: "Okay",
                });
                input.value = 1;
                return;
            }

            if (currentQty > maxStock) {
                swal.fire({
                    title: "Stock Limit Reached",
                    text: `${productName} - Only ${maxStock} items available in stock.`,
                    icon: "warning",
                    button: "Okay",
                });
                input.value = maxStock;
                return;
            }

            if (action === 'increase') {
                if (currentQty < maxStock) {
                    currentQty++;
                } else {
                    swal.fire({
                        title: "Stock Limit Reached",
                        text: `${productName} - Only ${maxStock} items available in stock.`,
                        icon: "warning",
                        button: "Okay",
                    });
                    return;
                }
            } else if (action === 'decrease' && currentQty > 1) {
                currentQty--;
            }

            input.value = currentQty;

            const data = {
                productId: productId,
                quantity: currentQty
            };

            fetch('/updateCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const oldPrice = parseFloat(priceElement.textContent.replace("â‚¹", ""));
                        const newPrice = data.newPrice;

                        priceElement.textContent = `â‚¹${data.newPrice}`;

                        const currentOrderTotal = parseFloat(orderTotalElement.textContent.replace("â‚¹", ""));
                        const priceDifference = newPrice - oldPrice;
                        const updatedOrderTotal = currentOrderTotal + priceDifference;

                        orderTotalElement.textContent = `â‚¹${updatedOrderTotal.toFixed(2)}`;
                    } else {
                        swal.fire({
                            title: "Error!",
                            text: data.message,
                            icon: "error",
                            button: "Okay",
                        });
                    }
                })
                .catch(error => {
                    swal.fire({
                        title: "Server Error!",
                        text: "Something went wrong while updating the cart. Please try again later.",
                        icon: "error",
                        button: "Okay",
                    });
                });
        }

        document.querySelectorAll('input[data-product-id]').forEach(input => {
            input.addEventListener('change', function () {
                const productId = input.getAttribute('data-product-id');
                updateQuantity(null, productId);
            });
        });
    </script>



    <!--========delete product============-->
    <script>
        function cancelProduct(productId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to remove this product from the cart?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/cart/cancel/${productId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                const productRow = document.querySelector(`#product-${productId}`);
                                if (productRow) {
                                    productRow.remove();
                                }
                                Swal.fire(
                                    'Deleted!',
                                    'Your product has been removed from the cart.',
                                    'success'
                                );
                            } else {
                                Swal.fire(
                                    'Error!',
                                    data.message || 'There was an issue removing the product.',
                                    'error'
                                );
                            }
                        })
                        .catch(error => {
                            Swal.fire(
                                'Error!',
                                'An unexpected error occurred.',
                                'error'
                            );
                            console.error('Error canceling product:', error);
                        });
                }
            });
        }
    </script>
