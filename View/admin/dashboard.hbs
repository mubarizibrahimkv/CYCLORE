<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="/css/dashboard.css">

    <style>
        .navbar {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        .navbar ul {
            display: flex;
            gap: 20px;
        }

        .navbar ul li a {
            text-decoration: none;
            color: #333;
            font-weight: bold;
        }

        .navbar ul li a:first-child {
            color: #161102;
        }

        .icons {
            display: flex;
            gap: 10px;
            position: absolute;
            right: 20px;
        }

        .dashboard-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 40px;
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .navbar ul {
            display: flex;
            gap: 25px;
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .navbar ul li a {
            text-decoration: none;
            color: #333;
            font-weight: bold;
        }

        .navbar ul li a#same {
            color: #9e7317;
            font-weight: 800;
        }

        .header {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
        }


        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f6fa;
        }

        header {
            margin-top: 50px;
            text-align: center;
            color: rgb(14, 11, 11);
            padding: 1rem 0;
        }

        .dashboard-container {
            margin: 0 auto;
            padding: 1rem;
        }

        .filter-section {
            text-align: center;
            margin-bottom: 30px;
        }

        .filter-section label {
            font-size: 16px;
            font-weight: bold;
            margin-right: 10px;
        }

        .filter-section select {
            padding: 8px 12px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
            background-color: #f9f9f9;
            cursor: pointer;
            outline: none;
            transition: border-color 0.3s;
        }

        .filter-section select:focus {
            border-color: #007bff;
        }

        .charts-section {
            display: flex;
            height: auto;
            max-width: 1000px;
            justify-content: center;
            margin-top: 1rem;
        }

        .chart-container {
            background: white;
            padding: 1rem;
            border-radius: 8px;
            border: 1px solid #ddd;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: auto;
            height: 400px
        }

        #salesChart {
            width: 100% !important;
            height: 100% !important;
        }


        .chart-container h3 {
            text-align: center;
            color: #333;
            margin-bottom: 1rem;
        }

        canvas {
            display: block;
            max-width: 100%;
        }




        .best-selling-section {
            margin: 30px 0;
        }

        .best-selling-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .card {
            background: #e7e4e4;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            width: 100%;
            max-width: 300px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
        }

        .card h3 {
            margin: 10px 0;
            font-size: 20px;
            color: #007bff;
        }

        .card p {
            font-size: 14px;
            margin: 5px 0;
            color: #555;
        }

        .card p strong {
            font-weight: bold;
        }

        @media (max-width: 768px) {
            .best-selling-list {
                flex-direction: column;
                align-items: center;
            }

            .card {
                max-width: 90%;
            }


        }
    </style>
</head>

<body>
    <div class="header">
        <nav class="navbar">
            <ul>
                <li><a id="same" href="#">Dashboard</a></li>
                <li><a href="/admin/users">Users</a></li>
                <li><a href="/admin/products">Products</a></li>
                <li><a href="/admin/orders">Orders</a></li>
                <li><a href="/admin/coupon">Coupon</a></li>
                <li><a href="/admin/offer">Offers</a></li>
                <li><a href="/admin/inventory">Inventory</a></li>
                <li><a href="/admin/categories">Categories</a></li>
                <li><a href="/admin/salesReport">Sales Report</a></li>
            </ul>
            <div class="icons">
                <span>ðŸ””</span>
                <a href="/admin/profile"><span>ðŸ‘¤</span></a>
            </div>
        </nav>
    </div>
    <main>
        <div class="dashboard-container">
            <header>
                <h1>Admin Dashboard</h1>
            </header>

            <section class="filter-section">
                <label for="filter">Filter:</label>
                <select id="filter" onchange="updateSalesChart()">
                    <option value="yearly">yearly</option>
                    <option value="monthly">Monthly</option>
                    <option value="weekly">Weekly</option>
                </select>
            </section>

            <section class="charts-section">
                <div class="chart-container">
                    <h3>Sales Chart</h3>
                    <canvas id="salesChart"></canvas>
                </div>
            </section>
            <hr>
            <hr>
            <hr>
            <hr>
            <hr>


            <div>
                <label for="startDate">Start Date:</label>
                <input type="date" id="startDate" name="startDate">

                <label for="endDate">End Date:</label>
                <input type="date" id="endDate" name="endDate">

                <button id="filterBtn">Apply Filter</button>
            </div>

            <div style="width: 70%; height: 400px; margin-top: 50px;">
                <canvas id="categorySalesChart"></canvas>
                <p>Category-wise Sales Graph</p>
            </div>


            <section class="best-selling-section">
                <h2>Top 10 Best Selling Products</h2>
                <div class="best-selling-list">
                    {{#each bestProducts}}
                    <div class="card">
                        <h3>{{name}}</h3>
                        <p><strong>Total Sold:</strong> {{totalSold}}</p>
                        <p><strong>Price:</strong> â‚¹{{price}}</p>
                    </div>
                    {{/each}}
                </div>
            </section>

            <!-- Top 10 Best Selling Categories -->
            <section class="best-selling-section">
                <h2>Top 10 Best Selling Categories</h2>
                <div class="best-selling-list">
                    {{#each bestCategories}}
                    <div class="card">
                        <h3>{{_id}}</h3>
                        <p><strong>Total Sold:</strong> {{totalSold}}</p>
                    </div>
                    {{/each}}
                </div>
            </section>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("filter").value = "yearly";
            updateSalesChart();
        });

        let salesChart;

        async function updateSalesChart() {
            const filter = document.getElementById("filter").value;

            try {
                const response = await fetch(`/admin/sales-data?filter=${filter}`);
                const result = await response.json();

                if (response.ok) {
                    const labels = result.labels;
                    const data = result.totalPrices;

                    if (salesChart) {
                        salesChart.destroy();
                    }

                    const ctx = document.getElementById("salesChart").getContext("2d");

                    salesChart = new Chart(ctx, {
                        type: "line",
                        data: {
                            labels: labels,
                            datasets: [{
                                label: "Total Sales (â‚¹)",
                                data: data,
                                backgroundColor: "rgba(54, 162, 235, 0.2)",
                                borderColor: "rgba(54, 162, 235, 1)",
                                borderWidth: 1,
                                fill: true,
                            }],
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    title: {
                                        display: true,
                                        text: "Total Sales (â‚¹)",
                                    },
                                },
                                x: {
                                    title: {
                                        display: true,
                                        text: filter === "yearly" ? "Years" : filter === "monthly" ? "Months" : "Weeks",
                                    },
                                },
                            },
                        },
                    });
                } else {
                    console.error("Error:", result.error);
                }
            } catch (error) {
                console.error("Error loading chart data:", error);
            }
        }
        document.getElementById("filter").addEventListener("change", updateSalesChart);
    </script>

    <!--=================category graph===========-->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const fetchCategoryData = (startDate, endDate) => {
                const url = `/admin/saless-data?startDate=${startDate}&endDate=${endDate}`;

                fetch(url)
                    .then(response => response.json())
                    .then(data => {
                        console.log("Category Data from Backend:", data);

                        if (data.success && data.data.length > 0) {
                            const labels = data.data.map(item => item.category);
                            const values = data.data.map(item => item.totalSold);

                            console.log("Chart Data:", { labels, values });

                            const ctx = document.getElementById('categorySalesChart').getContext('2d');
                            console.log("Chart Context:", ctx);

                            if (ctx) {
                                new Chart(ctx, {
                                    type: 'bar',
                                    data: {
                                        labels: labels,
                                        datasets: [{
                                            label: 'Total Sold Quantity by Category',
                                            data: values,
                                            backgroundColor: 'rgba(153, 102, 255, 0.2)',
                                            borderColor: 'rgba(153, 102, 255, 1)',
                                            borderWidth: 1,
                                        }],
                                    },
                                    options: {
                                        responsive: true,
                                        maintainAspectRatio: false,
                                        scales: {
                                            y: {
                                                beginAtZero: true,
                                            },
                                        },
                                        plugins: {
                                            legend: {
                                                position: 'top',
                                            },
                                            tooltip: {
                                                callbacks: {
                                                    label: function (context) {
                                                        return context.raw;
                                                    },
                                                },
                                            },
                                        },
                                    },
                                });
                            } else {
                                console.error("Failed to get chart context.");
                            }
                        } else {
                            alert('No data available for the selected date range');
                        }
                    })

                    .catch(error => {
                        console.error('Error fetching category graph data:', error);
                        alert('There was an error fetching the data. Please try again.');
                    });
            };

            document.getElementById('filterBtn').addEventListener('click', function () {
                const startDate = document.getElementById('startDate').value;
                const endDate = document.getElementById('endDate').value;

                if (startDate && endDate) {
                    fetchCategoryData(startDate, endDate); 
                } else {
                    alert('Please select both start and end dates');
                }
            });
            fetchCategoryData('', '');
        });
    </script>

</body>


</html>