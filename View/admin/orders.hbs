<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Orders Page</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fc;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        h1 {
            font-size: 36px;
            margin-bottom: 30px;
            text-align: center;
        }

        .table {
            width: 100%;
            margin: 0 auto;
            border-collapse: collapse;
        }

        .table th,
        .table td {
            padding: 15px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .table thead {
            background-color: #091f36;
            color: #fff;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }


        .btn {
            font-size: 14px;
            padding: 8px 12px;
            margin: 5px;
            cursor: pointer;
            border-radius: 5px;
        }

        .btn-warning {
            background-color: #b36c0a;
            border: none;
            color: #fff;
        }

        .btn-warning:hover {
            background-color: #ec971f;
        }

        .btn-danger {
            background-color: #921c15;
            border: none;
            color: #fff;
        }

        .btn-danger:hover {
            background-color: #d81b15;
        }

        .form-select {
            padding: 5px;
            border-radius: 5px;
            width: 120px;
            text-align: center;
        }

        @media (max-width: 768px) {
            .navbar ul {
                flex-direction: column;
                align-items: center;
            }

            .table {
                font-size: 12px;
            }

            .table th,
            .table td {
                padding: 10px;
            }
        }

        .navbar {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: relative;
        }


        .navbar ul {
            display: flex;
            gap: 25px;
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .navbar ul li a {
            text-decoration: none;
            color: #333;
            font-weight: bold;
        }

        .navbar ul li a#same {
            color: #9e7317;
            font-weight: 800;

        }

        .icons {
            display: flex;
            gap: 10px;
            position: absolute;
            right: 20px;
        }
        .pagination{
            justify-content: center;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar">
        <ul>
            <li><a href="/admin/dashboard">Dashboard</a></li>
            <li><a href="/admin/Users">Users</a></li>
            <li><a href="/admin/products">Products</a></li>
            <li><a id="same" href="#">Orders</a></li>
            <li><a href="/admin/coupon">Coupon</a></li>
            <li><a href="/admin/offer">Offers</a></li>
            <li><a href="/admin/inventory">Inventory</a></li>
            <li><a href="/admin/categories">Categories</a></li>
            <li><a href="/admin/salesReport">Sales Report</a></li>
        </ul>
        <div class="icons">
            <span>ðŸ””</span>
            <a href="/admin/profile"><span>ðŸ‘¤</span></a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-5">
        <h1 class="text-center">Orders</h1>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Customer Name</th>
                        <th>Products</th>
                        <th>Total Amount</th>
                        <th>Payment Status</th>
                        <th>Order Status</th>
                        <th>Order Date</th>
                        <th>Cancel Order</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        {{#each orders}}
                        {{#each products}}
                    <tr>
                        <td>{{../userId.username}}</td>
                        <td>
                            <ul>
                                {{#if this.discountedPrice}}
                                <li>{{this.productId.name}} (x{{this.quantity}}) - â‚¹{{this.discountedPrice}}
                                </li>
                                {{else}}
                                <li>{{this.productId.name}} (x{{this.quantity}}) - â‚¹{{this.productId.price}}</li>
                                {{/if}}
                            </ul>
                        </td>
                        <td>
                            {{#if this.discountedPrice}}
                            {{multiply this.discountedPrice this.quantity}}
                            {{else}}
                            {{multiply this.productId.price this.quantity}}
                            {{/if}}
                        </td>
                        <td>{{../paymentMethod}}</td>
                        <td>
                            <form action="/admin/orders/status/{{../_id}}/{{this.productId._id}}" method="POST">
                                <select class="form-select" name="status" onchange="this.form.submit()">
                                    <option value="Pending" {{#if (eq this.status 'Pending' )}}selected{{/if}} {{#if (or
                                        (eq this.status 'Delivered' ) (eq this.status 'Cancelled' ))}}disabled{{/if}}>
                                        Pending
                                    </option>
                                    <option value="Shipped" {{#if (eq this.status 'Shipped' )}}selected{{/if}} {{#if (eq
                                        this.status 'Delivered' )}}disabled{{/if}}>
                                        Shipped
                                    </option>
                                    <option value="Delivered" {{#if (eq this.status 'Delivered' )}}selected{{/if}}>
                                        Delivered
                                    </option>
                                    <option value="Cancelled" {{#if (eq this.status 'Cancelled' )}}selected{{/if}}>
                                        Cancelled
                                    </option>
                                </select>
                            </form>
                        </td>
                        <td>{{formatDate ../createdAt}}</td>
                        <td>
                            <form action="/admin/order/cancelStatus/{{../_id}}/{{this.productId._id}}" method="POST">
                                <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                    {{/each}}
                </tbody>
            </table>


            <!-- Pagination -->
            <div class="pagination mt-4">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        {{#if (gt currentPage 1)}}
                        <li class="page-item">
                            <a class="page-link" href="?page={{subtract currentPage 1}}&limit=10">Previous</a>
                        </li>
                        {{/if}}

                        {{#each (range 1 totalPages)}}
                        <li class="page-item {{#if (eq ../currentPage this)}}active{{/if}}">
                            <a class="page-link" href="?page={{this}}&limit=10">{{this}}</a>
                        </li>
                        {{/each}}

                        {{#if (lt currentPage totalPages)}}
                        <li class="page-item">
                            <a class="page-link" href="?page={{add currentPage 1}}&limit=10">Next</a>
                        </li>
                        {{/if}}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    </div>
    </div>
</body>