<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>users</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            padding-top: 30px;
        }

        .container {
            width: 80%;
            margin: 20px auto;
            background: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #09253d;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        button {
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        .block-button {
            background-color: #700811;
            color: white;
        }

        .unblock-button {
            background-color: #074424;
            color: white;
        }

        .navbar {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: relative;
        }


        .navbar ul {
            display: flex;
            gap: 25px;
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .navbar ul li a {
            text-decoration: none;
            color: #333;
            font-weight: bold;
        }

        .navbar ul li a#same {
            color: #9e7317;
            font-weight: 800;
        }

        .icons {
            display: flex;
            gap: 10px;
            position: absolute;
            right: 20px;
        }

        .header {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
        }

        .pagination {
            display: flex;
            justify-content: center;
            margin: 20px 0;
        }

        .pagination a {
            margin: 0 5px;
            padding: 5px 10px;
            text-decoration: none;
            border: 1px solid #ccc;
            color: #333;
            border-radius: 5px;
        }

        .pagination a.active {
            background-color: #a78015;
            color: white;
            border-color: #b9871a;
        }

        .pagination a:hover {
            background-color: #d49714;
            color: white;
        }

        #searchInput {
            width: 97%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-right: 10px;
            transition: width 0.4s ease;
        }

        @media (max-width: 768px) {
            #searchInput {
                width: 100%;
                margin-right: 0;
            }

            .container {
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <nav class="navbar">
            <ul>
                <li><a href="/admin/dashboard">Dashboard</a></li>
                <li><a id="same" href="#">Users</a></li>
                <li><a href="/admin/products">Products</a></li>
                <li><a href="/admin/orders">Orders</a></li>
                <li><a href="/admin/coupon">Coupon</a></li>
                <li><a href="/admin/offer">Offers</a></li>
                <li><a href="/admin/inventory">Inventory</a></li>
                <li><a href="/admin/categories">Categories</a></li>
                <li><a href="/admin/salesReport">Sales Report</a></li>
            </ul>
            <div class="icons">
                <span>ðŸ””</span>
                <a href="/admin/profile"><span>ðŸ‘¤</span></a>
            </div>
        </nav>
    </div>
    <div class="container">
        <h1>User Management</h1>
        <input type="text" id="searchInput" placeholder="Search by Username or Email" oninput="searchProducts()">
        <table>
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>{{this.username}}</td>
                    <td>{{this.email}}</td>
                    <td>{{#if this.status}}Active{{else}}Blocked{{/if}}</td>
                    <td>
                        {{#if this.status}}
                        <form action="/admin/users/block/{{this._id}}" method="POST">
                            <button type="submit" class="block-button">Block</button>
                        </form>
                        {{else}}
                        <form action="/admin/users/unblock/{{this._id}}" method="POST">
                            <button type="submit" class="unblock-button">Unblock</button>
                        </form>
                        {{/if}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <!-- Pagination Controls -->
        <nav class="pagination">
            {{#if (gt currentPage 1)}}
            <a href="?page={{subtract currentPage 1}}" class="prev">Previous</a>
            {{/if}}

            {{#each (range 1 totalPages)}}
            <a href="?page={{this}}" class="{{#if (eq this ../currentPage)}}active{{/if}}">{{this}}</a>
            {{/each}}

            {{#if (lt currentPage totalPages)}}
            <a href="?page={{add currentPage 1}}" class="next">Next</a>
            {{/if}}
        </nav>
    </div>
</body>

<script>
    const searchProducts = () => {
        const query = document.getElementById('searchInput').value;

        fetch(`/admin/users/search?query=${query}`, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json'
            }
        })
            .then(response => response.json())
            .then(data => {
                updateTable(data.users);
            })
            .catch(error => console.error('Error fetching data:', error));
    };

    const updateTable = (users) => {
        const tbody = document.querySelector("tbody");
        tbody.innerHTML = ''; 

        users.forEach(user => {
            const row = document.createElement('tr');
            row.innerHTML = `
            <td>${user.username}</td>
            <td>${user.email}</td>
            <td>${user.status ? 'Active' : 'Blocked'}</td>
            <td>
                ${user.status ?
                    `<form action="/admin/users/block/${user._id}" method="POST">
                        <button type="submit" class="block-button">Block</button>
                    </form>` :
                    `<form action="/admin/users/unblock/${user._id}" method="POST">
                        <button type="submit" class="unblock-button">Unblock</button>
                    </form>`
                }
            </td>
        `;
            tbody.appendChild(row);
        });
    };
</script>

</html>